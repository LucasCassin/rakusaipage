{
  "name": "frontend-user-management",
  "version": "1.0.0",
  "description": "Frontend para sistema de gerenciamento de usuários com integração a APIs existentes",
  "main": "index.js",
  "scripts": {
    "dev": "./infra/scripts/close-database-container.sh \"npm run services:up && npm run services:wait:database && npm run migrations:up && next dev\"",
    "test": "./infra/scripts/close-database-container.sh \"npm run services:up  && concurrently -n next,jest --hide next -k -s command-jest \\\"next dev\\\" \\\"jest --runInBand --verbose\\\"\"",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node ./infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migrations:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "migrations:run:down": "./infra/scripts/close-database-container.sh \"npm run services:up && npm run services:wait:database && npm run migrations:down\"",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --no-cache",
    "commit": "cz",
    "prepare": "husky"
  },
  "author": "Lucas Cassin",
  "license": "Apache 2.0",
  "dependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@heroicons/react": "2.2.0",
    "@tailwindcss/postcss": "4.0.16",
    "async-retry": "1.3.3",
    "bcrypt": "5.1.1",
    "cookie": "1.0.2",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "exceljs": "^4.4.0",
    "joi": "17.13.3",
    "next": "15.2.3",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.9.1",
    "pg": "8.14.1",
    "postcss": "8.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "swr": "2.3.3",
    "tailwind-scrollbar": "4.0.2",
    "tailwindcss": "4.0.16",
    "use-debounce": "10.0.4",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.22.0",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "set-cookie-parser": "2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
